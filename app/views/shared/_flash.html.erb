<% flash.each do |name, msg| %>
  <div class="flash-message <%= name %>" onclick="this.remove()">
    <%= msg %>
  </div>
<% end %>

<style>
.flash-message {
  padding: 1rem 2rem;
  margin: 1rem;
  border-radius: 8px;
  cursor: pointer;
  position: fixed;
  top: 1rem;
  right: 1rem;
  z-index: 1000;
  animation: slideIn 0.3s ease-out;
}

.flash-message.notice {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.flash-message.alert {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}
</style> 