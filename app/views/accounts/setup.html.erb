<div class="account-setup-container">
  <h1>Complete Your Account Setup</h1>
  <p class="subtitle">Choose how you'd like to sign in to Fellows</p>

  <div class="setup-options">
    <div class="setup-option">
      <h2>Sign in with Google</h2>
      <p>Use your Google account for quick and secure access</p>
      <%= button_to user_google_oauth2_omniauth_authorize_path, 
                    method: :post,
                    data: { turbo: false },
                    class: "google-button" do %>
        <img src="https://www.google.com/favicon.ico" alt="Google" class="google-icon">
        Continue with Google
      <% end %>
    </div>

    <div class="divider">
      <span>or</span>
    </div>

    <div class="setup-option">
      <h2>Create a Password</h2>
      <p>Set up a password to sign in directly</p>
      
      <%= form_tag create_password_account_path, class: "password-form" do %>
        <div class="form-group">
          <label for="email">Email</label>
          <%= email_field_tag :email, @email, readonly: true, class: "form-input" %>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <%= password_field_tag :password, nil, class: "form-input", 
                               placeholder: "At least 8 characters" %>
        </div>

        <div class="form-group">
          <label for="password_confirmation">Confirm Password</label>
          <%= password_field_tag :password_confirmation, nil, class: "form-input",
                               placeholder: "Re-enter your password" %>
        </div>

        <%= submit_tag "Create Account", class: "submit-button" %>
      <% end %>
    </div>
  </div>
</div>

<style>
.account-setup-container {
  max-width: 800px;
  margin: 2rem auto;
  padding: 2rem;
}

h1 {
  font-size: 2rem;
  color: #2c3e50;
  margin-bottom: 0.5rem;
  text-align: center;
}

.subtitle {
  color: #666;
  text-align: center;
  margin-bottom: 2rem;
}

.setup-options {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.setup-option {
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.setup-option h2 {
  font-size: 1.5rem;
  color: #2c3e50;
  margin-bottom: 0.5rem;
}

.setup-option p {
  color: #666;
  margin-bottom: 1.5rem;
}

.google-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 8px;
  background: white;
  color: #333;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.2s;
}

.google-button:hover {
  background: #f8f9fa;
  border-color: #ccc;
}

.google-icon {
  width: 20px;
  height: 20px;
  margin-right: 0.75rem;
}

.divider {
  text-align: center;
  position: relative;
  margin: 1rem 0;
}

.divider::before,
.divider::after {
  content: "";
  position: absolute;
  top: 50%;
  width: 45%;
  height: 1px;
  background: #ddd;
}

.divider::before {
  left: 0;
}

.divider::after {
  right: 0;
}

.divider span {
  background: #f8f9fa;
  padding: 0 1rem;
  color: #666;
  font-size: 0.9rem;
}

.password-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  color: #2c3e50;
  font-size: 0.9rem;
}

.form-input {
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 1rem;
}

.form-input:focus {
  outline: none;
  border-color: #007bff;
}

.form-input[readonly] {
  background: #f8f9fa;
}

.submit-button {
  margin-top: 1rem;
  padding: 0.75rem;
  border: none;
  border-radius: 8px;
  background: #28a745;
  color: white;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.2s;
}

.submit-button:hover {
  background: #218838;
}

@media (min-width: 768px) {
  .setup-options {
    flex-direction: row;
  }

  .setup-option {
    flex: 1;
  }

  .divider {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 2rem;
  }

  .divider::before,
  .divider::after {
    width: 1px;
    height: 45%;
    left: 50%;
  }

  .divider::before {
    top: 0;
  }

  .divider::after {
    top: auto;
    bottom: 0;
  }
}
</style> 